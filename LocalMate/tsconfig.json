{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["app/*"],
      "assets/*": ["assets/*"],
      "constants/*": ["constants/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "screens/**/*.ts",
    "screens/**/*.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "app/screens/Store/SearchResultsScreen.js"  ]
}